@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Bazar_App.Models.DTO
@model List<CategoryDto>


<h4>Category Page</h4>
    <hr />
<p>
    <a asp-controller="Category" asp-action="Create">Create New</a>
</p>
<table border=1 class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Photo
            </th>
            <th>
                Edit
            </th>
            <th>    
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@item.Imgurl" style="width:180px; height:100px"/>
            </td>
            <td>
                <a asp-controller="Category" asp-action = "Edit" asp-route-id =@item.Id>Edit</a>
            </td>
            <td>
                <a asp-controller="Category" asp-action="Details" asp-route-id=@item.Id>Details</a>
            </td>
            <td>
                <a asp-controller="Category" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>